<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ComicActivity">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_comic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints">
                <ImageButton
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/btnback"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_arrow_back_main_color"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"></ImageButton>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_author_comic"
                    app:layout_constraintLeft_toRightOf="@+id/btnback"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/layout_header_author_comic"
                        app:layout_constraintTop_toTopOf="parent"
                        app:cardCornerRadius="10dp"
                        android:layout_width="35dp"
                        android:background="@drawable/ic_author_comic_header"
                        android:layout_height="35dp">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="centerCrop"
                            android:id="@+id/author_header_comic"
                            android:src="@drawable/img_4"></com.google.android.material.imageview.ShapeableImageView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/trans_title"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintLeft_toRightOf="@+id/layout_header_author_comic"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="nhóm dịch 1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scr_comic"
        app:layout_constraintTop_toBottomOf="@+id/header_comic"
        android:layout_width="match_parent"
        android:paddingBottom="125dp"
        android:fillViewport="true"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/comic_name_tv"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:text="Tên truyện 1"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"></TextView>
            <TextView
                android:id="@+id/comic_desc"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Miêu tả truyện 1"
                android:maxLines="15"
                android:ellipsize="end"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/comic_name_tv"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"></TextView>
            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Lượt xem:"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/comic_desc"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"></TextView>
            <TextView
                app:layout_constraintLeft_toRightOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/comic_desc"
                android:id="@+id/views"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_btn"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/chapter_btn"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="15sp"
                    android:background="@drawable/layout_btn_chapter"
                    android:drawableLeft="@drawable/ic_chapter_list"
                    android:text=" Danh sách Chap"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatButton>
                <ImageButton
                    android:id="@+id/iconFavorite"
                    android:layout_width="45dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:src="@drawable/ic_fav"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/img_comic"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_4"
                app:layout_constraintTop_toBottomOf="@+id/layout_btn"
                app:layout_constraintBottom_toTopOf="@+id/material_divider_comic"
                tools:layout_editor_absoluteX="-16dp"></ImageView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:id="@+id/material_divider_comic"
                app:layout_constraintTop_toBottomOf="@+id/img_comic"
                ></com.google.android.material.divider.MaterialDivider>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_filter_comment_comic"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/material_divider_comic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textSize="21sp"
                    android:text="Bình Luận"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_filter_comic"
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/text_filter_comic"
                        android:background="@color/white"
                        android:src="@drawable/ic_filter"
                        tools:ignore="MissingConstraints"></ImageButton>
                    <TextView
                        android:id="@+id/text_filter_comic"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Filter"
                        android:layout_width="wrap_content"
                        android:clickable="true"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="10dp"
                        tools:ignore="MissingConstraints"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="50dp"
                    android:id="@+id/txt_norecord_comment_comic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Không có comment nào"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/item_rcv_comic"
                app:layout_constraintTop_toBottomOf="@+id/item_filter_comment_comic"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/rcv_comment_list_comic"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/commentPanel_comic"
        android:layout_width="match_parent"
        android:weightSum="20"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="19"
            android:background="@color/white"
            app:boxBackgroundMode="none">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_txt_comic"
                android:background="@drawable/round_corner_edittext"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="3dp"
                android:hint="Nhập bình luận của bạn" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/imageButton_send_comic"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>