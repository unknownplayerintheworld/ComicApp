<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/gray"
        android:iconifiedByDefault="false"
        android:queryHint="Search"
        >
    </androidx.appcompat.widget.SearchView>
    <ProgressBar
        android:id="@+id/pb_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/gray"
        android:visibility="gone"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/searchView"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtTransSearchRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kênh"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="10dp"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvTransSearchItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTransSearchRs"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/txtComicSearchRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Truyện"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/rcvTransSearchItems"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvSearchItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtComicSearchRs"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>