<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="LoginViewModel"
            type="hung.deptrai.comicapp.viewmodel.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.LoginActivity"
        android:background="@color/main_color">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo_signin"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_signin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"></com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/Corologintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/logo_signin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="35dp"
            android:textFontWeight="1000"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:text="@string/login_with_coro"
            tools:ignore="MissingConstraints">

        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsernameLayout"
            app:layout_constraintTop_toBottomOf="@+id/Corologintxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:textColorHint="#cfd9df"
            android:hint="Username"

            tools:ignore="MissingConstraints">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@={LoginViewModel.acc.username}"
                android:inputType="text"
                android:textColor="#cfd9df">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPasswordLayout"
                app:layout_constraintTop_toBottomOf="@+id/txtUsernameLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                tools:ignore="MissingConstraints"
                android:textColorHint="#cfd9df"
                android:hint="Password">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="@={LoginViewModel.acc.password}"
                    android:textColor="#cfd9df"
                    android:ems="10"
                    ></com.google.android.material.textfield.TextInputEditText></com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/btnlogin"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Login"
        android:padding="20dp"
        android:onClick="@{()->LoginViewModel.onClickLogin()}"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/layout_btn">
    </androidx.appcompat.widget.AppCompatButton>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont have an account?"
            android:textColor="@color/white"
            android:textFontWeight="900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnsignup"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsignup"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:onClick="@{()->LoginViewModel.onClickSignup()}"
            android:background="@drawable/layout_btn"
            android:drawableLeft="@drawable/ic_signup_white"
            android:text="Join us"

            android:textAllCaps="false"
            android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatButton>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="560dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>